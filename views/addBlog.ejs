<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Add Blog</title>
  <link rel="stylesheet" href="/css/style.css">
  <style>
    body {
      background: linear-gradient(to right, #000000, #03345a, #373434);
      padding-top: 50px;
    }

    .body {
      padding: 10px;
    }

    form {
      max-width: 1000px;
      margin: 25px auto;
      padding: 20px;
      border-radius: 5px;
      background: linear-gradient(to right, #424245, #222222);
      box-shadow: 0 0px 80px rgba(61, 139, 199, 0.429);
    }

    .form-group {
      margin-bottom: 15px;
    }

    label {
      display: block;
      font-weight: bold;
      margin-bottom: 5px;
      color: rgb(245, 236, 236);
    }

    input,
    textarea {
      width: 100%;
      padding: 8px;
      box-sizing: border-box;
      border-radius: 5px;
      border: none;
      background-color: rgb(255, 242, 218);
    }

    .form-group textarea::-webkit-scrollbar {
      width: 10px;
    }

    /* Track (the background) */
    .form-group textarea::-webkit-scrollbar-track {
      background: #f1f1f1;
      border-radius: 10px;
    }

    /* Handle (the draggable part) */
    .form-group textarea::-webkit-scrollbar-thumb {
      background: #80795c;
      border-radius: 10px;
    }

    /* Handle on hover */
    .form-group textarea::-webkit-scrollbar-thumb:hover {
      background: #80795c;
    }

    button {
      padding: 10px;
      font-weight: bold;
      background-color: rgb(20, 20, 19);
      border-radius: 5px;
      cursor: pointer;
      border: none;
      color: rgb(255, 255, 255);
    }

    button:hover {
      color: rgb(226, 213, 213);
    }
  </style>
</head>

<body>
  <%- include ("navbar_forcontact") %>
    <div class="body">

      <form action="/add_blog" method="POST" enctype="multipart/form-data">
        <h2 style="text-align:center; margin-bottom: 10px; color: rgb(245, 236, 236);">Add the Blog</h2>

        <div class="form-group">
          <label for="title">Title</label>
          <input type="text" name="title" id="title" maxlength="50" required>
        </div>
        <div class="form-group">
          <label for="body">Description</label>
          <textarea name="body" id="body" rows="13" required></textarea>
        </div>
        <div class="form-group">
          <label for="eventDate">Event Date</label>
          <input type="date" id="eventDate" name="eventDate" required>
        </div>
        <div class="form-group">
          <label for="youtubeLink">YouTube Video Link:</label>
          <input type="url" id="youtubeLink" name="youtubeLink" placeholder="https://www.youtube.com/watch?v=example"
            required>
        </div>
        <div class="form-group">
          <label for="coverphoto">Cover Photo</label>
          <input type="file" name="coverphoto" id="coverphoto" accept="image/*" required>
          <img id="coverPreview"
            style="border-radius: 10px; max-width: 150px; max-height: 150px; margin-top: 10px; display: block;">
        </div>
        <button class="btn" type="submit">Add</button>
      </form>
    </div>
    <script>
      const fileInput = document.getElementById('coverphoto');
      const previewImg = document.getElementById('coverPreview');

      fileInput.addEventListener('change', function () {
        const file = this.files[0];

        if (file && file.type.startsWith('image/')) {
          const reader = new FileReader();

          reader.onload = function (e) {
            previewImg.src = e.target.result;
            previewImg.style.display = 'block';
          };

          reader.readAsDataURL(file); // converts image to base64
        } else {
          previewImg.src = '';
          previewImg.style.display = 'none';
        }
      });
    </script>
</body>

</html>