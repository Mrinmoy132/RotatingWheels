    <style>
        @import url('https://fonts.googleapis.com/css2?family=Archivo:ital,wght@0,100..900;1,100..900&family=Baloo+Bhai+2:wght@400..800&family=Lobster&display=swap');

        .footer {
            height: 30vh;
            padding: 20px 50px;
            display: flex;
            justify-content: flex-start;
            align-items: center;
            gap: 200px;
            border-radius: 10px;
        }

        .social-media {
            display: flex;
            flex-direction: column;
            height: inherit;
            justify-content: space-around;
        }

        .rw {
            font-family: "Archivo", sans-serif;
            font-optical-sizing: auto;
            font-style: normal;
            font-weight: 600;
            font-size: 50px;
            color: white;
            letter-spacing: 2px;
        }

        .social_media {
            padding-bottom: 10px;
            display: flex;
            align-items: center;
            gap: 15px;
            flex-wrap: wrap;
        }

        .social_media img {
            transition: transform 0.2s;
        }

        .social_media img:hover {
            transform: scale(1.1);
        }


        .ytinstacontainer {
            display: flex;
            justify-content: flex-start;
            align-items: center;
            gap: 150px;
        }

        .youtube a {
            color: white;
            font-size: 18px;
            letter-spacing: 1.5px;
            display: flex;
            flex-direction: column;
            align-items: end;
            font-family: "Archivo", sans-serif;
            font-optical-sizing: auto;
            font-style: normal;
            font-weight: 400;
            text-decoration: none;
        }

        .myytsvg :first-child {
            stroke: rgb(255, 0, 0);
            fill: rgb(255, 0, 0);
        }

        .myytsvg :last-child {
            stroke: #ff0000;
            fill: rgb(255, 255, 255);
        }

        .instagram a {
            color: white;
            font-size: 18px;
            letter-spacing: 1.5px;
            display: flex;
            flex-direction: column;
            align-items: end;
            font-family: "Archivo", sans-serif;
            font-optical-sizing: auto;
            font-style: normal;
            font-weight: 400;
            text-decoration: none;
        }

        .myinstasvg :first-child {
            stroke: pink;
            fill: #bc1888;
        }

        .myinstasvg :nth-child(2) {
            stroke: pink;
            fill: #bc1888;
        }

        .myinstasvg :nth-child(3) {
            stroke: pink;
            fill: #bc1888;
        }

        @media (max-width: 1000px) {
            .rw {
                font-size: 30px;
            }

            .footer {
                height: max-content;
                padding: 10px;
                display: block;
            }

            .social-media {
                gap: 20px;
            }

            .below-connect {
                padding-bottom: 0px;
                gap: 20px;
            }

            .ytinstacontainer {
                gap: 40px;
            }

            .youtube a,
            .instagram a {
                align-items: flex-start;
                font-size: 12px;
            }

            .youtube>a>svg,
            .instagram>a>svg {
                width: 25px;
                height: 40px;
            }

            .youtube,
            .instagram {
                display: flex;
            }


        }

        @media (max-width: 475px) {

            .youtube p,
            .instagram p {
                display: none;
            }

            .ytinstacontainer {
                gap: 20px;
            }
        }
    </style>
</head>

