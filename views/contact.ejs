<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contact Me</title>
    <link rel="stylesheet" href="/css/style.css">
    <style>
        body {
            padding-top: 50px;
            background: linear-gradient(to right, #000000, #03345a, #373434);
            color: #fff;
        }

        .contact-section {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            padding: 60px 30px 20px 30px;
        }

        .contact-info {
            flex: 1;
            padding-right: 40px;
            display: flex;
            flex-direction: column;
            gap: 200px;
        }

        .contact-info :first-child>h2 {
            margin-bottom: 12px;
        }

        .contact-info :first-child>h2 {
            font-size: 30px;
            color: #00bcd4;
        }

        .contact-info :first-child>p {
            color: #ccc;
            line-height: 1.3;
            margin-bottom: 60px;
            font-style: italic;
        }

        .info-item {
            display: flex;
            align-items: flex-start;
        }

        .contact-info :first-child .info-item:nth-of-type(1) {
            margin-bottom: 25px;
        }

        .info-item img {
            width: 40px;
            margin-right: 10px;
        }

        .info-item div span {
            display: block;
            font-weight: bold;
            color: #00bcd4;
            margin-bottom: 5px;
        }

        .info-item div p,
        .info-item div a {
            color: #ccc;
            text-decoration: none;
        }

        .info-item div a:hover {
            color: #00bcd4;
        }

        .right_container {
            flex: 1;
            background: linear-gradient(to right, #e6fcff, #b6f6ff);
            border-radius: 8px;
            padding: 30px;
            color: #111;
            box-shadow: 0 0 30px rgba(12, 135, 176, 0.8);
        }

        .contact-form h3 {
            margin-bottom: 20px;
            font-size: 25px;
        }

        .contact-form input,
        .contact-form textarea {
            width: 100%;
            padding: 12px;
            margin-bottom: 20px;
            border: none;
            border-bottom: 2px solid #ccc;
            background: transparent;
            color: #000;
            font-size: 15px;
            outline: none;
        }

        .contact-form textarea::-webkit-scrollbar {
            width: 10px;
        }

        /* Track (the background) */
        .contact-form textarea::-webkit-scrollbar-track {
            background: #f1f1f1;
            border-radius: 10px;
        }

        /* Handle (the draggable part) */
        .contact-form textarea::-webkit-scrollbar-thumb {
            background: #00bcd4;
            border-radius: 10px;
        }

        /* Handle on hover */
        .contact-form textarea::-webkit-scrollbar-thumb:hover {
            background: #0097a7;
        }

        .contact-form input::placeholder,
        .contact-form textarea::placeholder {
            color: #999;
        }

        .contact-form button {
            width: 100%;
            padding: 12px;
            background: #00bcd4;
            border: none;
            color: #fff;
            font-size: 16px;
            font-weight: bold;
            border-radius: 4px;
            cursor: pointer;
            transition: background 0.3s;
        }

        .contact-form button:hover {
            background: #018ea1;
        }

        #result {
            margin-top: 10px;
            text-align: center;
            font-weight: bold;
            padding: 10px;
            border-radius: 5px;
            display: none;
        }

        #result.success {
            background: #e0f7fa;
            color: #00796b;
        }

        #result.error {
            background: #ffebee;
            color: #c62828;
        }

        .social_media {
            margin-bottom: 10px;
            display: flex;
            align-items: center;
            gap: 15px;
            flex-wrap: wrap;
            font-size: 20px;
            color: #00bcd4;
        }

        .social_media>a img {
            transition: transform 0.2s;
            width: 30px;
        }

        .social_media>:nth-child(2) img {
            width: 25px;
        }

        .social_media img:hover {
            transform: scale(1.1);
        }

        @media (max-width: 1000px) {

            .contact-section {
                flex-direction: column;
                padding: 50px 20px 30px 20px;
                gap: 100px;
            }

            .contact-info :first-child>h2 {
                font-size: 40px;
            }

            .contact-info {
                gap: 70px;
                padding-right: 0px;
            }

            .info-item img {
                width: 35px;
            }

            .info-item div span,
            .social_media {
                font-size: 30px;
            }

            .contact-info :first-child>p,
            .info-item div a,
            .info-item div p {
                font-size: 20px;
            }

            .right_container {
                padding: 20px;
            }

            .contact-form h3 {
                font-size: 30px;
            }

            .contact-form input,
            .contact-form textarea {
                font-size: 18px;
            }

            .contact-form button,
            #result {
                font-size: 20px;
            }

            .social_media {
                gap: 25px;
                font-size: 30px;
            }

            .social_media>a img {
                width: 40px;
            }

            .social_media>:nth-child(2) img {
                width: 35px;
            }
        }

        @media (max-width: 650px) {
            .contact-section {
                padding: 20px 20px 30px 20px;
            }

            .contact-info :first-child>h2 {
                font-size: 30px;
            }

            .contact-info :first-child>p,
            .info-item div a,
            .info-item div p {
                font-size: 16px;
            }

            .contact-info :first-child>h2 {
                margin-bottom: 6px;
            }

            .info-item div span,
            .social_media {
                font-size: 20px;
            }

            .info-item img {
                width: 25px;
            }

            .social_media {
                gap: 20px;
            }

            .right_container {
                padding: 15px;
            }

            .contact-form input,
            .contact-form textarea {
                font-size: 14px;
            }

            .contact-form input,
            .contact-form textarea {
                padding: 5px;
                margin-bottom: 16px;
            }

            .contact-form button,
            #result {
                font-size: 15px;
            }
        }

        @media (max-width: 500px) {
            .contact-section {
                padding: 10px 10px 10px 10px;
                gap: 50px;
            }

            .contact-info :first-child>h2 {
                font-size: 25px;
            }

            .contact-info :first-child>p {
                margin-bottom: 25px;
            }

            .info-item img {
                display: none;
            }

            .contact-info {
                gap: 20px;
            }
        }

        @media (max-width: 500px) {

            .contact-form input,
            .contact-form textarea {
                font-size: 12px;
            }
        }
    </style>
</head>

<body>
    <%- include("navbar_forcontact") %>

        <div class="contact-section">
            <div class="contact-info">
                <div>
                    <h2>Contact Me</h2>
                    <p>Wanna roast me? Got content ideas? Hit me up with your thoughts, memes, collab requests, or
                        conspiracy theories. This message goes straight to me, or my editor. So say something!</p>

                    <div class="info-item">
                        <img src="/icons/home.svg" alt="Home Icon" />
                        <div>
                            <span>Address</span>
                            <p>Near Chandrapur School,<br>Agartala, Tripura, India, 799008</p>
                        </div>
                    </div>

                    <div class="info-item">
                        <img src="/icons/email.svg" alt="Email Icon" />
                        <div>
                            <span>Email</span>
                            <a href="mailto:rotatingwheels132@gmail.com" target="_blank">rotatingwheels132@gmail.com</a>
                        </div>
                    </div>
                </div>
                <div>
                    <div class="social_media">
                        <b>Connect</b>
                    </div>
                    <div class="social_media">
                        <a href="https://www.instagram.com/mrinmoy_das132/" target="_blank">
                            <img src="/icons/instagram.png" alt="Instagram" />
                        </a>
                        <a href="https://www.facebook.com/profile.php?id=100014198437858" target="_blank">
                            <img src="/icons/facebook.png" alt="Facebook" />
                        </a>
                        <a href="https://x.com/WheelsRotating" target="_blank">
                            <img src="/icons/X.png" alt="X (Twitter)" />
                        </a>
                        <a href="https://www.linkedin.com/in/mrinmoy-das-a8a9371b3/" target="_blank">
                            <img src="/icons/linkedin.webp" alt="LinkedIn" />
                        </a>
                    </div>
                </div>
            </div>

            <div class="right_container">
                <form class="contact-form" method="POST" id="form">
                    <input type="hidden" name="access_key" value="6597ef89-e8ae-4dc8-b361-8f611e9985d4">
                    <h3>Send Message</h3>
                    <input type="text" id="name" name="name" placeholder="Enter your Name" required />
                    <input type="email" id="email" name="email" placeholder="Enter your Email" required />
                    <input type="text" id="subject" name="subject" placeholder="Enter the Subject line" required />
                    <textarea id="message" name="message" rows="5" placeholder="Write down your Message here..."
                        required></textarea>
                    <button type="submit" id="btn">Send</button>
                    <div id="result"></div>
                </form>
            </div>
        </div>

        <script>
            const form = document.getElementById('form');
            const button = document.getElementById('btn');
            const result = document.getElementById('result');

            form.addEventListener('submit', async function (e) {
                e.preventDefault();

                const formData = new FormData(form);
                const object = Object.fromEntries(formData);
                const json = JSON.stringify(object);

                button.innerText = "Sending...";
                button.disabled = true;
                result.innerText = "";
                result.className = "";

                try {
                    const response = await fetch('https://api.web3forms.com/submit', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'Accept': 'application/json'
                        },
                        body: json
                    });

                    const data = await response.json();

                    if (response.status === 200) {
                        button.innerText = "send";
                        result.innerText = "Mail Sent Successfully";
                        result.style.display = "block";
                        result.className = "success";
                    } else {
                        result.innerText = "Failed to Send ";
                        result.style.display = "block";
                        result.className = "error";
                    }

                } catch (error) {
                    console.error("Fetch failed:", error);
                    result.innerText = "Something went wrong";
                    result.style.display = "block";
                    result.className = "error";
                }

                form.reset();

                setTimeout(() => {
                    result.innerText = "";
                    result.style.display = "none";
                    button.disabled = false;
                }, 4000);
            });
        </script>
</body>

</html>